@model Mvc1VaccinDemo.ViewModels.VaccinEditViewModel  


@{
    ViewData["Title"] = "Edit vaccin";
}

<section class="py-5">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Edit Vaccin</h3>
                </div>

                <div class="card-body">
                    <form asp-controller="Vaccin" asp-action="Edit" method="post">
                        <div class="form-group">
                            <label asp-for="Supplier" class="form-control-label">Supplier</label>
                            <input type="text" class="form-control" asp-for="Supplier">
                        </div>
                        <div class="form-group">
                            <label asp-for="Namn">Namn</label>
                            <input type="text" class="form-control" asp-for="Namn">
                        </div>
                        <div class="form-group">
                            <label asp-for="EuOkStatus">Okstatus</label>
                            <input type="text" class="form-control" asp-for="EuOkStatus">
                        </div>
                        <div class="form-group">
                            <label asp-for="Type">Type</label>
                            <select class="form-control" asp-for="Type" asp-items="Model.Types"></select>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

            </div>

        </div>
    </div>
</section>



