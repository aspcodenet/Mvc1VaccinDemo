@model Mvc1VaccinDemo.ViewModels.VaccinIndexViewModel

@{
    ViewData["Title"] = "Vacciner";
}
<section class="py-5">

    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Sök</h3>
                </div>
                <div class="card-body">


                    <form method="get" asp-controller="Vaccin" asp-action="Index">

                        <div class="form-row align-items-center">
                            <div class="col-auto">
                                <input type="text" class="form-control" asp-for="q">
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">Sök</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-5 mb-lg-0">
                <div class="card-header">
                    <h2 class="h6 mb-0 text-uppercase">Leverans status: VALT VACCIN</h2>
                </div>
                <div class="card-body">
                    <p class="text-gray mb-5">Uppgifter är ungefärliga</p>
                    <div class="d-flex justify-content-between align-items-start align-items-sm-center mb-4 flex-column flex-sm-row">
                        <div class="left d-flex align-items-center">
                            <div class="icon icon-lg shadow mr-3 text-gray"><i class="fab fa-dropbox"></i></div>
                            <div class="text">
                                <h6 class="mb-0 d-flex align-items-center"> <span>Antal beställda doser</span><span class="dot dot-sm ml-2 bg-violet"></span></h6><small class="text-gray">Per idag</small>
                            </div>
                        </div>
                        <div class="right ml-5 ml-sm-0 pl-3 pl-sm-0 text-violet">
                            <h5>16000</h5>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-start align-items-sm-center mb-4 flex-column flex-sm-row">
                        <div class="left d-flex align-items-center">
                            <div class="icon icon-lg shadow mr-3 text-gray"><i class="fab fa-apple"></i></div>
                            <div class="text">
                                <h6 class="mb-0 d-flex align-items-center"> <span>Nästa leveransdag</span><span class="dot dot-sm ml-2 bg-green"></span></h6><small class="text-gray">Kan komma en dag tidigare</small>
                            </div>
                        </div>
                        <div class="right ml-5 ml-sm-0 pl-3 pl-sm-0 text-green">
                            <h5>2021-02-08</h5>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-start align-items-sm-center mb-4 flex-column flex-sm-row">
                        <div class="left d-flex align-items-center">
                            <div class="icon icon-lg shadow mr-3 text-gray"><i class="fas fa-shopping-basket"></i></div>
                            <div class="text">
                                <h6 class="mb-0 d-flex align-items-center"> <span>Antal doser</span><span class="dot dot-sm ml-2 bg-blue"></span></h6><small class="text-gray">I ovan leverans</small>
                            </div>
                        </div>
                        <div class="right ml-5 ml-sm-0 pl-3 pl-sm-0 text-blue">
                            <h5>300</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div class="row">

        @*<form >

                <div class="form-row align-items-center">
                    <div class="col-auto">
                        <label for="SearchWord">Sök:</label>
                    </div>
                    <div class="col-auto">
                        <input type="text" class="form-control" asp-for="SearchWord">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Sök</button>
                    </div>
                </div>

            </form>*@


        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Vaccin</h3>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Namn</th>
                                <th scope="col">Supplier</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vaccin in Model.Vacciner)
                            {
                                <tr>
                                    <td>@vaccin.Name</td>
                                    <td>@vaccin.Supplier</td>
                                    <td><a asp-controller="Vaccin" asp-action="Edit" asp-route-Id="@vaccin.Id" class="btn btn-secondary active" role="button" aria-pressed="true">Edit</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>


                </div>
            </div>
        </div>

        <a asp-controller="Vaccin" asp-action="New" class="btn btn-secondary" role="button" aria-pressed="true">
            Create new
        </a>


    </div>
</section>
